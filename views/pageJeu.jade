// Première page de jeu qui sert de résumé pour le joueur. Il est possible de commencer une partie,
// reprendre celle en cours si il en existe une ou recréer un personnage

extends layout

block content

	h2 Page de jeu : Propriétés de votre personnage
	
	div.proprietes
		hr
		h3 Caractéristiques
		p 
			| Habileté : #{character.habilete}
		p 
			| Endurance : #{character.endurance}
		p 
			| Pièces d'or : #{character.pieces}
			
		hr
		
		div.imgright
			img(src="/images/bag.png", style="height:210px")
			
		h3 Equipement
		
		if character.arme1 && character.arme2
			p
				| Votre première arme : 
				| #{character.arme1}
			p 
				| Votre seconde arme : 
				| #{character.arme2}
				
		else if character.arme1
			p
				| Votre arme : #{character.arme1}
		else
			p
				| Vous n'avez aucune arme
		
		if character.sacADos.length		
			p 
				| Votre sac à dos contient :
			ul
				each val in character.sacADos
					li= val
		else
			p 
			| Votre sac à dos est vide
			
		if character.objSpeciaux.length		
			p 
				| Vos objets spéciaux :
			ul
				each val in character.objSpeciaux
					li= val
		else
			p 
				| Vous n'avez pas d'objets spéciaux.
			
		hr
		
		h3 Disciplines Kaï
		ul
			each val in character.disciplines
				if val == "La Maîtrise Des Armes"
					li= val + " : " + character.maitriseArme
				else 
					li= val
					
		hr
	
	div.combats
		h3 Combats
		table
			tr
				th Combat n°
				th Adversaire
				th Nombre de rounds
				th Résultat
			tr
				td 1
				td Bernie le Dingo
				td 3
				td Victoire
			tr
				td 2
				td Doudou le tombeur
				td 3
				td Victoire
			tr
				td 3
				td Modou Sénégalito
				td 4
				td Victoire
		hr
	
	div.regionButton
		button.btn(href='/reset', id="reinitialiserJeu") Réinitialiser la partie
		if pageActuelle
			a.btn(href='/jeu/'+ pageActuelle, id="commencerJeu") Reprendre la partie
		else
			a.btn(href='/jeu/1', id="commencerJeu") Commencer la partie
				
			
		