extends ../layout

block head
    link(rel="stylesheet", href="/stylesheets/pageJeu.css")

block content
    main(ng-controller = "controleurPages")
        div#contenu.floatbox
            div#title
                p#numeroPage {{page[0].id}}
    
            section#histoire(ng-repeat="section in page track by $index")
                p(ng-repeat="c in section.contenu")
                    img(ng-show="c.img" ng-src="{{c.img}}")
                    {{c.text}}
                
                include ./decisions.jade
                include ./combat.jade
        
        include ./stats.jade
