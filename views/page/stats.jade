section#stats.floatbox
    p Feuille d'Aventure
    table
        tbody
            tr
                td
                    img(src="/images/points_endurance.png")
                td
                    p(ng-show="joueur.objetsSpeciaux.indexOf('Gilet en Cuir Martele') > -1") {{ joueur.endurancePlus }} ({{ joueur.endurancePlus-2 }} + 2)  / {{ joueur.enduranceBase }}
                    p(ng-show="joueur.objetsSpeciaux.indexOf('Gilet en Cuir Martele') == -1") {{ joueur.endurancePlus }} / {{ joueur.enduranceBase }}
            tr
                td
                    img(src="/images/points_habilete.png")
                td
                    p#habilete {{ joueur.habileteBase }} + {{ joueur.habiletePlus-joueur.habileteBase }} = {{ joueur.habiletePlus }}
            tr
                td
                    img(src="/images/pieces_or.png")
                td
                    p {{ joueur.pieceOr }}
    div
        p Disciplines Kai
        ul#disciplines
            li(ng-repeat="d in joueur.disciplines") {{ d }}

    p
        a.button(ng-click="sacADos=true") Sac à dos
    
    div#sacADos(ng-show="sacADos")
        a#fermerSacADos(ng-click="sacADos=false")
        img(src="/images/backpack.png")
        div
            div
                p Objets
                ul
                    li(ng-repeat="obj in joueur.objets track by $index") {{ obj }}
            div
                p Objets Spéciaux
                ul
                    li(ng-repeat="objSpe in joueur.objetsSpeciaux track by $index") {{ objSpe }}

