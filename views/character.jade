h3= "Choix des équipements"
form(action='/postCharacter',method='post')
	div.form-arme1
		p Choisissez un 1er équipement :
		select(name='equipement1')
			optgroup(label='Arme')
				option(value='Epée', name='arme') Epée 
				option(value='Sabre', name='arme') Sabre 
				option(value='Lance', name='arme') Lance 
				option(value='Masse d\'armes', name='arme') Masse d'armes 
				option(value='Marteau de guerre ', name='arme') Marteau de guerre 
				option(value='Hâche', name='arme') Hâche 
				option(value='Bâton', name='arme') Bâton 
				option(value='Glaive', name='arme') Glaive 
			optgroup(label='Objet Special')
				option(value='Gilet De Cuir Matelassé', name='objetSpecial') Gilet De Cuir Matelassé
			optgroup(label='Objet Sac A Dos')
				option(value='Potion de Lampsur', name='objetSacADos') Potion de Lampsur 
				option(value='Rations spéciales', name='objetSacADos') Rations spéciales


